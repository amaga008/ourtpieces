
<div class="container card justify-content-right w-50">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="mt-5">Create your OurtPiece now!</h1>
      <%= simple_form_for @art do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :category %>
        <%= f.input :measurements %>
        <%= f.submit class: 'btn btn-dark mt-3 mb-5' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container card justify-content-left w-50">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="mt-5">Create your OurtPiece now!</h1>
      <%= simple_form_for @art do |f| %>
        <%= f.input :is_for_sale %>
        <%= f.input :is_for_auction %>
        <%= f.input :auction_end_time %>
        <%= f.input :starting_price %>
        <%= f.submit class: 'btn btn-dark mt-3 mb-5' %>
      <% end %>
    </div>
  </div>
</div>
