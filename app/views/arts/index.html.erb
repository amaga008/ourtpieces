<div class="index-page">

  <div class="banner-index">
      <div class="container">
        <video autoplay loop muted class="banner__video" poster="https://c.tenor.com/BhwW-9FnHtMAAAAd/vincent-van-gogh-starry-starry-night.gif">
          <source src="https://c.tenor.com/BhwW-9FnHtMAAAAd/vincent-van-gogh-starry-starry-night.gif" type="video/webm">
        </video>
          <div class="page-title"><h1>Look Through All OurtPieces</h1>
          </div>
          <div class="page-subtitle"> <h4>Take part in our Auctions or Buy Now!</h4>
          </div>
      <div>
        <%= simple_form_for :search, url: arts_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="query" id="search_query" />
            <button type="submit" class="btn btn-flat btn-search">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </div>
      </div>
  </div>






  <div class="container mt-5">
    <div class= filters-container d-flex>
    <div class="d-flex col-12">
    <p id="filter-text"> Filter By</p>
    <div class="filter dropdown">
        <%= form_tag arts_path, method: :get do %>
        <%= select_tag :category,
                    options_from_collection_for_select(
                      Art.category, :to_s, :to_s, params[:category]
                      ),
                    include_blank: "All Categories",
                    class: "filter-style-button"
                    %>
        <%# <%= select_tag :starting_price,
                    options_from_collection_for_select(
                      Art.starting_price, :to_s, :to_s, params[:starting_price]
                      ),
                    include_blank: "Price",
                    class: "filter-style-button"
                    %>
        <%= select_tag :status,
                    options_from_collection_for_select(
                      Art.status, :to_s, :to_s, params[:status]
                      ),
                    include_blank: "Status",
                    class: "filter-style-button" %>
                  <%= submit_tag "Search", class: "filter-search-btn" %>
                  <% end %>
      </div>
      </div>
      <%# <div class= "dropdown">
          <button class="btn-drop dropdown-toggle" type="button" data-toggle="dropdown">Sort By
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">Price: High-Low</a></li>
            <li><a href="#">Price: Low-High</a></li>
            <li><a href="#">Newest First</a></li>
            <li><a href="#">Oldest First</a></li>
          </ul>
      </div> %>
    </div>
    </div>
  </div>





  <div class="container mt-5">
    <div class="row justify-content-between">
      <% @arts.each do |art| %>
        <%= link_to art do %>
        <div class="card-art">
          <% if art.photo.attached? %>
            <%= cl_image_tag art.photo.key, height: 300, width: 400, crop: :fill %>
          <% else  %>
            <img src="https://cdn.pixabay.com/photo/2017/08/30/12/45/girl-2696947_960_720.jpg" />
          <% end %>
          <div class="card-art-infos">
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-art-user avatar-bordered" />
            <div>
              <h2 class="card-title"><%= art.title %></h2>
              <p class="card-text"> <%= art.user.username %></p>
              <p class="card-text">
              <% if art.is_for_auction %>
              <%= "On Auction" %>
              <% else %>
              <%= "On Sale" %>
              <% end %>
              </p>
              <p class="card-text"> <strong>Price: â‚¬<%= art.starting_price %></strong></p>
            </div>
          </div>
         </div>
         <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>
