<div class="david d-flex justify-content-center" style="background-image:linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://images.e-flux-systems.com/283237_588943ecc546db7cc5168e868a7848e7.jpg,1920); object-fit:cover">
    <div class="card-new-html">
    <h2 class= "login-signup-text">Log in</h2>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
       <p class = "text-black"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
       <br>
       <div class="form-actions mb-3">
       <%= f.button :submit, "Log in" , class:"sign-up" %>
       </div>
      </div>
  <br>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
  <br>
  <br>
  <br>
   </div>
</div>
